@model IEnumerable<TaskFlow.Business.DTOs.TaskDto>

@{
    ViewData["Title"] = "Görev Tanımlama";
}

<div class="container mt-4">
    <h2 class="mb-4">
        <i class="fas fa-pen-to-square me-2"></i>Görev Tanımlama
    </h2>

    <div class="alert alert-info mb-4">
        <i class="fas fa-info-circle me-2"></i>
        <strong>Bilgi:</strong> Bu ekranda yalnızca <strong>zorluk seviyesi henüz tanımlanmamış</strong> görevler listelenir.
        Zorluğu tanımlanan görevler otomatik olarak bu listeden kaybolur ve ana sayfada görüntülenir.
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="mb-4">
        <a asp-action="Create" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i>Yeni Görev Ekle
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-header bg-warning text-white">
            <h5 class="mb-0">
                <i class="fas fa-clock me-1"></i>Zorluk Tanımlanacak Görevler
            </h5>
        </div>
        <div class="card-body">
            @if (!Model.Any())
            {
                <div class="alert alert-info mb-0">
                    <i class="fas fa-info-circle me-2"></i>
                    Zorluk tanımlanacak görev bulunmamaktadır.
                </div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-hover table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Başlık</th>
                                <th>Açıklama</th>
                                <th>Oluşturulma</th>
                                <th style="width: 150px">İşlem</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var task in Model)
                            {
                                <tr>
                                    <td>@task.Id</td>
                                    <td>@task.Title</td>
                                    <td>
                                        @if (task.Description.Length > 50)
                                        {
                                            @task.Description.Substring(0, 50)

                                            <text>...</text>
                                        }
                                        else
                                        {
                                            @task.Description
                                        }
                                    </td>
                                    <td>@task.CreatedDate.ToString("dd.MM.yyyy HH:mm")</td>
                                    <td>
                                        <a asp-action="Define" asp-route-id="@task.Id"
                                           class="btn btn-sm btn-warning w-100">
                                            <i class="fas fa-chart-line me-1"></i>Zorluk Tanımla
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>

<!-- Font Awesome -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">